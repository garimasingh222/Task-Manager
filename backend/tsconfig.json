{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]   // âœ… only Node types
  },
  "include": ["src", "src/seed.ts"],
  "exclude": ["node_modules", "dist"]
}


